<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hearing.calltest.widget.CustomVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="45dp"
            android:layout_toStartOf="@+id/set_show_tv"
            android:onClick="setRingtone"
            android:src="@drawable/ringtone_set" />

        <TextView
            android:id="@+id/set_show_tv"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_corner"
            android:gravity="center"
            android:text="@string/set_show"
            android:onClick="setShow"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="45dp"
            android:layout_toEndOf="@+id/set_show_tv"
            android:onClick="setContact"
            android:src="@drawable/contact" />
    </RelativeLayout>
</RelativeLayout>